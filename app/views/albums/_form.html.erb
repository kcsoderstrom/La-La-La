<% editing = album.persisted? %>
<% action_url = editing ? album_url(album) : albums_url %>

<form action="<%= action_url %>" method="post">
  <input
     name="authenticity_token"
     type="hidden"
     value="<%= form_authenticity_token %>">
  <% if editing %>
    <input type="hidden" name="_method" value="put">
  <% end %>

  <% if album.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(album.errors.count, "error") %> prohibited this album from being saved:</h2>

      <ul>
      <% album.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <label for="title">Title</label>
  <input type="text" id="title" name="album[title]" value="<%= album.title %>">
  <br>

  <label for="band">Band</label>
  <select id="band" name="album[band_id]">
    <option <%= 'selected' unless album.band %>>Select a band</option>

    <% Band.all.each do |band| %>
    <option value="<%= band.id %>" <%= 'selected' if album.band == band %>>
      <%= band.to_s.capitalize %>
    </option>
    <% end %>
  </select>
  <br>
  <br>

  <table>
    <tr>
      <td>
        <label for="studio">Studio</label>
        <input
          type="radio"
          id="studio"
          name="album[live]"
          value="false" <%= 'checked' if album.live == false %>>
      </td>
    </tr>
    <tr>
      <td>
        <label for="live">Live</label>
        <input
          type="radio"
          id="live"
          name="album[live]"
          value="true" <%= 'checked' if album.live == true %>>
      </td>
    </tr>
  </table>
  <br>

  <input type="submit" value="Create album">
</form>

<a href="<%= action_url %>">Back</a>