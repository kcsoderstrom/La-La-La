<p id="notice"><%= notice %></p>

<table>
  <tr>
    <td>
      <strong>Title:</strong>
    </td>
    <td>
      <strong>Album:</strong>
    </td>
  </tr>
  <tr>
    <td>
      <%= @track.title %>
    </td>
    <td>
      <a href="<%= album_url(@track.album) %>"><%= @track.album %></a>
    </td>
  </tr>
</table>

<form
  method="post"
  action="<%= track_url(@track) %>">
  <input
    name="_method"
    value="delete"
    type="hidden">
  <input
     name="authenticity_token"
     type="hidden"
     value="<%= form_authenticity_token %>">
  <input value="Delete Track" type="submit">
</form>

<a href="<%= tracks_url %>">Back</a> <br>
<a href="<%= edit_track_url(@track) %>">Edit</a>
